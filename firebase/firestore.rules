rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read: if true;
      allow create: if isOwner(uid);
      allow update: if (isOwner(uid) && !('role' in request.resource.data)) || isAdmin();
      allow delete: if isAdmin();
    }

    match /posts/{postId} {
      allow read: if (resource.data.status == 'APPROVED' && resource.data.publishedAt != null && resource.data.publishedAt <= request.time)
        || isAdmin()
        || isOwner(resource.data.userId);
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'PENDING'
        && !('reviewedAt' in request.resource.data)
        && !('reviewedBy' in request.resource.data)
        && !('publishedAt' in request.resource.data);

      allow update: if isAdmin();
      allow update: if isOwner(resource.data.userId)
        && (resource.data.status in ['PENDING'])
        && request.resource.data.status == resource.data.status
        && request.resource.data.userId == resource.data.userId
        && !('reviewedAt' in request.resource.data)
        && !('reviewedBy' in request.resource.data)
        && !('publishedAt' in request.resource.data);

      allow delete: if isAdmin() || (isOwner(resource.data.userId) && (resource.data.status in ['PENDING']));
    }

    match /posts/{postId}/likes/{uid} {
      allow read: if isSignedIn();
      allow create: if isOwner(uid) && !exists(/databases/$(database)/documents/posts/$(postId)/likes/$(uid));
      allow delete: if isOwner(uid);
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if get(/databases/$(database)/documents/posts/$(postId)).data.status == 'APPROVED' || isAdmin();
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.text.size() <= 280;
      allow update, delete: if isAdmin() || isOwner(resource.data.userId);
    }

    match /posts/{postId}/views/{viewerId} {
      allow read, write: if isAdmin();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }

    match /counters/{postId} {
      allow read: if isAdmin();
      allow write: if isAdmin();

      match /likes_shards/{shardId} {
        allow read: if isAdmin();
        allow create: if isSignedIn() && request.resource.data.count == 1;
        allow update: if isSignedIn() && request.resource.data.count == resource.data.count + 1;
      }

      match /views_shards/{shardId} {
        allow read: if isAdmin();
        allow create: if isSignedIn() && request.resource.data.count == 1;
        allow update: if isSignedIn() && request.resource.data.count == resource.data.count + 1;
      }
    }

    match /rateLimits/{uid} {
      allow read, write: if isAdmin();
    }
  }
}
